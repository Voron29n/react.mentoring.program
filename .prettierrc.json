{
  "printWidth": 80,
  "semi": true,
  "singleQuote": true,
  "tsxSingleQuote": true,
  "jsxSingleQuote": true,
  "trailingComma": "none",
  "jsxBracketSameLine": false,
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "requirePragma": false,
  "proseWrap": "preserve",
  "importOrder": [
    "^(react|redux)(.*)",
    "<THIRD_PARTY_MODULES>",
    "components(.*)",
    "context(.*)",
    "hooks(.*)",
    "store(.*)",
    "utils(.*)",
    "images(.*)",
    "^[./]"
  ],
  "importOrderSeparation": false
}
